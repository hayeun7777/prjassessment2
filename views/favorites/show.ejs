<div class="row">
	<div class="col s6">
		<h3>Favorite Animals</h3>
			<%faves.forEach(function(fav){%>
				<ul>
					<% if(fav.extinct===true) {%>
					<div class= "extinctTrue">
						<li><b>Species Name:</b> <%=fav.species_name%></li>
					</div>
					<% } else{ %>
					<div class="extinctFalse">
						<li><b>Species Name:</b> <%=fav.species_name%></li>
					</div>
					<% } %>
						<span class="italic"><li><b>Scientific Name:</b> <%=fav.scientific_name%></li></span>
						<li><b>Image:</b> <img src="<%=fav.image_url%>"></li>
						<li><b>Description:</b> <%=fav.description%></li>
				</ul>
				<form method="GET" action="/favorites/<%=fav.id%>">
					<button class="btn waves-effect waves-light" type="submit" name="action">Click for More!
	    		<i class="material-icons right">info_outline</i>
	 			</button>
				</form>
			<%})%>
	</div>
</div>