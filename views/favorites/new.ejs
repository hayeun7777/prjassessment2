<div class="row">
	<div class="col s6">
		<h3>Add New Animals</h3>
			<form method="POST" action="/favorites">
				<ul>
					<li><b>Species Name:</b><input type="text" name="species_name" placeholder="Species Name"></li>
					<li><b>Scientific Name:</b><input type="text" name="scientific_name" placeholder="Scientific Name"></li>
					<li><b>Image URL:</b><input type="text" name="image_url" placeholder="Image URL"></li>
					<li><b>Animal Description:</b><input type="text" name="description" placeholder="Animal Description"></li>
					<label>
				        <input type="checkbox" name="extinct" />
				        <span>Extinct</span>
			     	</label>
				</ul>
				<button class="btn waves-effect waves-light" type="submit" name="action">Add New Animal To The List!
	    		<i class="material-icons right">add</i>
	 			</button>
			</form>
</div>

